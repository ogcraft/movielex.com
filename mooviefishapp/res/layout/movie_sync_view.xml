    <RelativeLayout 
        android:id="@+id/layout_start_stop_btn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp" >
 
    <Button
        android:id="@+id/mv_btn_start_search"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/btn_background_circle"
        android:gravity="center" 
        android:textColor="#FFFFFF"
        android:layout_marginTop="30dp"
        android:onClick="btn_start_searchClick"
        android:text="@string/start_search"

		android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_below="@id/mv_sync_play_time_right"
        android:layout_alignParentLeft="true" />
    
    <Button
        android:id="@+id/mv_btn_stop"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/btn_background_circle"
        android:gravity="center" 
        android:textColor="#FFFFFF"
        android:layout_marginTop="30dp"
        android:onClick="btn_stopClick"
        android:text="@string/stop" 
		android:textAppearance="?android:attr/textAppearanceSmall"

        android:layout_alignParentRight="true"/>

