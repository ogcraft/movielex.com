    <ImageView
        android:id="@+id/mv_sync_img"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true" 
        android:paddingTop="10dp"
		android:layout_alignParentTop="true"
        />

    <TextView
        android:id="@+id/mv_found_display"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center" 
        android:textColor="#FFFFFF"
        android:layout_marginTop="20dp"        
        android:layout_below="@id/mv_sync_img"
		android:textAppearance="?android:attr/textAppearanceSmall"
		android:text="           \            "/>
   
    <SeekBar
        android:id="@+id/mv_sync_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_marginTop="30dp" 
        android:layout_below="@id/mv_found_display"
         /> 
	 <TextView
        android:id="@+id/mv_sync_play_time_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center" 
        android:textColor="#FFFFFF"
        android:layout_below="@id/mv_sync_seekbar"
        android:layout_marginLeft="10dp"
		android:textAppearance="?android:attr/textAppearanceSmall"
		android:text="00:00:00"
        android:layout_alignParentLeft="true" />
	<TextView
        android:id="@+id/mv_sync_play_time_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center" 
        android:textColor="#FFFFFF"
        android:layout_below="@id/mv_sync_seekbar"
        android:layout_marginRight="10dp"
		android:textAppearance="?android:attr/textAppearanceSmall"
		android:text="00:00:00"
        android:layout_alignParentRight="true"/>
